<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4dp"
    android:layout_gravity="center"
    app:cardCornerRadius="14dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_list"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"/>
        <LinearLayout
            android:id="@+id/lnr_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/img_list"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/semi"
                tools:text="Nama Produk"/>
            <TextView
                android:id="@+id/tv_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/reg"
                android:textColor="@color/adue"
                android:textSize="11sp"
                tools:text="Deskripsi"/>
            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/semibold"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:text="Harga"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_fav"
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="79dp"
            android:layout_toRightOf="@id/img_list"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/favorite"
            android:fontFamily="@font/medium"
            android:hint="Add To Cart"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColorHint="@color/white"
            android:textSize="8sp"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>